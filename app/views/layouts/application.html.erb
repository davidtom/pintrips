<!DOCTYPE html>
<html>
  <head>
    <title>Pintrips</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--  Flash messages -->
    <% flash.each do |name, msg|%>
      <%= content_tag :div, msg, class: "flash_message"  %>
    <% end %>
    <!-- Log out and View Profile Links TODO: put these in a div or divs for css later-->
    <% if logged_in?%>
      <%= "Welcome #{current_user.user_name}! Not you? "%>
      <%= link_to "Log out", logout_path, method: :delete %>
      <label> | </label>
      <%= link_to "View Profile", user_path(current_user.id) %>
    <% end %>
    <%= yield %>
  </body>
</html>
