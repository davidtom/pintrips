<% comments.each do |c| %>
  <div style="background-color: #f3f3f3">
    <p><%= link_to c.user.user_name, user_path(c.user) %> commented at <%= c.created_at.to_date %></p>
    <p><%= c.content %></p>
    <% if c.user == current_user %>
      <span><%= link_to "Edit", edit_comment_path(c)%></span>
      <span> | </span>
      <span><%= link_to "Delete", comment_path(c), method: :delete, data: { confirm: 'Delete Comment?' } %></span>
    <% end %>
  </div>
  <hr>
<% end %>
