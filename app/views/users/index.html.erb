<h1>User List</h1>

<div id="users">
<% @users.each do |user| %>
  <div class="user">
    <p>
      <strong><%=h user.user_name  %></strong>
      <% if logged_in? %>
        <% if user != current_user && !Friendship.between(current_user, user)%>
          (<%= link_to "add friend", friendships_path(friend_id: user), method: :post%>)
        <% end %>
      <% end %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>
</div>
